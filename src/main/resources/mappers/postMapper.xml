<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.travel.post.mapper.PostMapper">
	<!-- 글 생성 메소드  -->
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`userLoginId`
			,`subject`
			,`content`
			,`createdAt`
			,`updatedAt`
			, `startDate`
			, `endDate`
		)
		VALUES
		(
			#{userId}
			,#{userLoginId}
			, #{subject}
			, #{content}
			, NOW()
			, NOW()
			, #{startDate}
			, #{endDate}
		)
	</insert>
	
	<!-- 글 리스트 들고오는 xml -->
	<select id="selectPostList" resultType="com.travel.post.domain.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`createdAt`
			,`updatedAt`
			, `startDate`
			, `endDate`
		FROM
			`post`
		WHERE
			`userLoginId` = #{userLoginId}
	</select>
	
	<!-- 계획 삭제 xml -->
	<delete id="deletePostByPostId">
		DELETE 
		FROM 
			`post`
		WHERE
			`id` = #{id}
	</delete>
	
	<!-- 글 수정 xml -->
	<update id="updatePostByPostId" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			, `content` = #{content}
			, `updatedAt` = NOW()
			, `startDate` = #{startDate}
			, `endDate` = #{endDate}
		WHERE
			`id` = #{postId}
	</update>
</mapper>